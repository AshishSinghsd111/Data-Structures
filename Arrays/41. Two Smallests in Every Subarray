--->> java solution

class Solution {
    public int pairWithMaxSum(int[] arr) {
        // code here
        if(arr.length<2)
        {
            return -1;
        }
        int sum=0;
        for(int i=0;i<arr.length-1;i++)
        {
            sum=Math.max(sum, arr[i]+arr[i+1]);
        }
        return sum;
    }
}
